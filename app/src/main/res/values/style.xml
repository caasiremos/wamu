<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_layout">
        <item name="contentPadding">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardForegroundColor">@color/white</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="outline_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
    </style>

    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textColorHint">@color/gray_200</item>
    </style>

    <style name="edit_text_layout">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="paddingStart">16dp</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:background">@drawable/input_field_background</item>
    </style>
    <!--    Spinner style-->
    <style name="spinner_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background"></item>
    </style>
    <!--    Heading Style-->
    <style name="headingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Sub Heading Style-->
    <style name="subHeadingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--  paragraph-->
    <style name="paragraph">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Sub paragraph-->
    <style name="sub_paragraph_italic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666768</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>